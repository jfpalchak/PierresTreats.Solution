@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@using Pierres.Models;
@model List<Pierres.Models.Treat>;

<h4>Available Treats</h4>

<br/>

<div class="card">
  <div class="card-header">
    <h5>Treats</h5>
    @if(User.Identity.IsAuthenticated)
    {
      @Html.ActionLink("Add New Treat", "Create")
    }
  </div>
  <div class="card-body">
    @if(Model.Count == 0)
    {
      <p>There are currently no treats available.</p>
    }
    else
    {
      <ul>
        @foreach(Treat treat in Model)
        {
          <li>@Html.ActionLink(treat.Type, "Details", new { id = treat.TreatId })</li>
        }
      </ul>
    }
  </div>
</div>